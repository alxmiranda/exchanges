*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  background: #ddd
  height: 100vh
  font-family: Arial, Helvetica, sans-serif

input, 
button
  outline: none

input
  width: auto
  background: none
  border 0
  border: 1px solid #444
  padding: 5px
  color: #444

.button
  border: none
  background: none
  border: 1px solid #444
  text-transform: uppercase
  font-size: 12px
  font-weight: 600
  letter-spacing: 2px
  line-height: 0
  color: #444
  padding: 20px 10px
  transition: background .30s 

  &:hover
    transition: background .35s
    background: #444
    color: #fff
    cursor: pointer

.button-secondary
  background: #444
  color: #fff

  &:hover
    transition: background .35s
    background: #333

#app
  display: flex
  justify-content: center
  align-items: center
  min-height: 100vh

.title
  font-size: 30px
  color: #444
  font-weight: normal
  letter-spacing: 1px
  text-transform: uppercase

  span 
    display: block
    font-size: 12px
    opacity: .75