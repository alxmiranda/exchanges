.modal
  position: fixed
  width: 100%
  height: 100vh
  top: 0
  background: rgba(0,0,0,.75)
  display: flex
  justify-content: center
  align-items: center
  z-index: 1
  
.modal__content
  height: 200px
  width: 100%
  max-width: 320px
  margin: 0 10px
  padding: 0 10px
  background: #fff
  display: flex
  flex-direction: column
  justify-content: space-around
  align-items: center

  .title
    text-align: center
    font-weight: bold
    span
      font-weight: normal

.modal__actions
  width: 100%
  justify-content: center
  display: flex

  .button
    margin 0 10px